<article class="posts min-height">
  <% page.posts.each( function ( post ) { %>
	<section class="post">
    <h3 class="post-title"><a href="<%- url_for(post.path) %>" class="post-title-link"><%= post.title %></a></h3>
    <div class="post-excerpt"><%- post.excerpt %></div>
    <a href="<%- url_for(post.path) %>" class="post-more">MORE Â»</a>
    <p class="post-meta">
	  <span class="post-time"><%- date(post.date, 'YYYY-MM-DD') %></span>
      <% post.categories.data.forEach( function ( categorie ) { %>
      <a href="<%- url_for( categorie.path ) %>" class="post-categories"><%= categorie.name %></a>
      <% } ) %>
      <% post.tags.data.forEach( function ( tag ) { %>
      <a href="<%- url_for( tag.path ) %>"" class="post-tags"><i class="post-tags-icon iconfont icon-waixingren"></i><%= tag.name %></a>
      <% } ) %>
    </p>
  </section>
  <% } ) %>
</article>

